{
  "name": "utf8-buffer-size",
  "version": "0.0.2",
  "description": "Find how many bytes are needed to serialize a UTF-8 string.",
  "homepage": "https://github.com/rochars/utf8-buffer-size",
  "author": "Rafael da Silva Rocha <rocha.rafaelsilva@gmail.com>",
  "license": "MIT",
  "main": "./dist/utf8-buffer-size.cjs.js",
  "module": "./main.js",
  "es2015": "./dist/utf8-buffer-size.js",
  "browser": "./dist/utf8-buffer-size.umd.js",
  "jsdelivr": "./dist/utf8-buffer-size.min.js",
  "unpkg": "./dist/utf8-buffer-size.min.js",
  "types": "./main.d.ts",
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "byte",
    "buffer",
    "binary",
    "parser",
    "UTF-8",
    "count",
    "size",
    "length"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/rochars/utf8-buffer-size.git"
  },
  "bugs": {
    "url": "https://github.com/rochars/utf8-buffer-size/issues"
  },
  "directories": {
    "dist": "dist",
    "externs": "externs"
  },
  "files": [
    "dist",
    "externs",
    "main.js",
    "main.d.ts",
    "LICENSE",
    "AUTHORS.md",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "lint": "jshint main.js externs",
    "test": "nyc ./node_modules/mocha/bin/_mocha test/src --recursive -R dot",
    "test-min": "node ./node_modules/mocha/bin/_mocha test/src --min --recursive -R dot",
    "test-cjs": "node ./node_modules/mocha/bin/_mocha test/src --cjs --recursive -R dot",
    "test-umd": "node ./node_modules/mocha/bin/_mocha test/src --umd --recursive -R dot",
    "test-esm": "node ./node_modules/mocha/bin/_mocha test/src --esm --recursive -R dot",
    "test-tsc": "tsc ./test/TypeScript/main.ts",
    "test-dist": "npm run test-min && npm run test-cjs && npm run test-umd && npm run test-esm",
    "pack": "npm run test && rollup -c && npm run test-dist && npm run test-tsc",
    "doc": "./node_modules/.bin/jsdoc main.js -d docs/api -t node_modules/docdash",
    "build": "npm run lint && npm run pack && npm run doc",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "codecov": "^3.0.2",
    "docdash": "^0.4.0",
    "esm": "^3.0.51",
    "google-closure-compiler": "^20180610.0.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "rollup": "^0.61.2",
    "rollup-plugin-closure-compiler-js": "^1.0.6",
    "typescript": "^2.9.2"
  },
  "dependencies": {}
